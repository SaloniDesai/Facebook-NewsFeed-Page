var text= $("#status_message").val();
					 
				$("#postBox").appendTo("<div>" + text + "</div>");

				<script>
        $(document).ready(function(){
            $("#post").click(function()
                {
                    $("#Box").show();
                    var t= $("#status_message").val();
                    $("postBox").val(t);
                    $("#status_message").val(" ");
                    
                });

           $("#delete").click(function()
            {
            $("#Box").remove();
             }); 


           
       });

        function()
                    {
                            $('#post').on("click", function()
                                            {
                                            $("#Box").show();
                                            var t =$("#status_message").val();
                                            
                                
                        
                            $("#delete").click(function()
                                {
                                $("#Box").remove();
                                 }); 
                            });

            $("#comment").click(function()
                {
                    $("#commentBox").show();


                
                })
                    

                });
                    
            
        </script>